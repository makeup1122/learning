{
  // 这个地方是固定的
  "manifest_version": 2,

  // 插件显示的名称
  "name": "我的单词",

  // 对插件的详细描述
  "description": "自己写的查询",

  // 版本描述
  "version": "1.0",

  // 浏览器的行为
  "browser_action": {

    // 插件的图标
    "default_icon": "favicon.ico",

    // 插件的标题
    "default_title": "Learning by doing",

    // 单击图标时，插件执行的页面
    "default_popup": "popup.html"
  }
}